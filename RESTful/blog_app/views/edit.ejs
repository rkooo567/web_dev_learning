<!-- edit template -->
<% include partials/header %>

	<div class="ui main text container segment">
		<div class="ui huge header">Edit <strong><%= blog.title %></strong></div>
		<form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
			<div class="field">
				<label>Title</label>
				<input type="text" name="blog[title]" value=<%= blog.title %>>
			</div>
			<div class="field">
				<label>Image</label>
				<img class ="ui centered rounded image" src="<%= blog.image %>">
				<input type="text" name="blog[image]" value=<%= blog.image %>>
			</div>
			<div class="field">
				<label>Blog content</label>
				<textarea name="blog[body]"><%= blog.body %></textarea>
			</div>
			<button class="ui secondary button">Edit</button>
		</form>
	</div>

<% include partials/footer %>